//#set pauseatexit=TRUE
//#set verbose=TRUE

// link with matlab
#ifdef MATLAB
link ../matlab_avi.link;
#endif

// public a complex global variable
global complex test_complex 1+2j;

// setup the clock
clock {
	timezone PST+8PDT;
	starttime '2001-01-01 0:00:00';
	stoptime '2001-01-02 0:00:00';
}

class test {
	randomvar x;
	randomvar y;
	randomvar z;
}

module assert;
module tape;
object test:..5 {
	name `my_test{id}`;
	latitude 48N30:0;
	x "type:uniform(0,1); refresh:1min";
	y "type:normal(0,1); refresh:1min";
	z "type:normal(0,1); integrate; refresh:1min";
	object recorder {
		file `test_w{id}.csv`;
		property "x,y,z";
		interval 60;
	};
	object assert {
		target x;
		relation inside;
		lower -1000;
		upper +1000;
	};
}

