#!/bin/bash
# Syntax: python [OPTIONS ...] -c COMMAND | -m MODULE | FILE | - [ARGUMENTS ...]
if [ "$1" == "help" ]; then
	echo -n 'Syntax: gridlabd python [OPTIONS ...] -c COMMAND | -m MODULE | FILE | - [ARGUMENTS ...]'
	${GLD_BIN:-/opt/gridlabd/bin}/python3 --help | head -n 1 | cut -f3- -d' '
else
	$GLD_BIN/python3 $*
fi
