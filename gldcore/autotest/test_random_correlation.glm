clock {
    starttime '2020-01-01 00:00:00';
    stoptime '2020-01-02 00:00:00';
}
class example {
    randomvar x;
    randomvar y;
}
module tape
{
    csv_data_only 1;
}
object example {
    x "type:normal(0.0,1.0); min:-3.0; max:+3.0; refresh:1s;";
    y "type:normal(0.0,0.1); min:-3.0; max:+3.0; refresh:1s; correlation:x*-0.9;";
    object recorder {
        property "x,y";
        file "example.csv";
        interval -1;
    };
}
#on_exit 0 python3 ../check_correlation.py example.csv 0.975 -0.878 0.800 0.004
