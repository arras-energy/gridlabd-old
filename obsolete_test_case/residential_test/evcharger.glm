module powerflow;
module residential;
module tape;

//#libpath ../residential/test/

clock {
	timezone PST8PDT;
	starttime '2000-01-01 0:00:00';
	stoptime  '2000-02-01 0:00:00';
};

object transformer_configuration {
	name Feeder_2000kVA;
	impedance 0.001+0.01j;
	powerA_rating 2000 kVA;
	powerB_rating 2000 kVA;
	powerC_rating 2000 kVA;
	primary_voltage 37500;
	secondary_voltage 7200;
	connect_type WYE_WYE;
	install_type PADMOUNT;
};

object transformer_configuration {
	name Poletop_40kVAa;
	impedance 0.005+0.05j;
	powerA_rating 40 kVA;
	primary_voltage 7200;
	secondary_voltage 120;
	connect_type SINGLE_PHASE_CENTER_TAPPED;
	install_type POLETOP;
};

object transformer_configuration {
	name Poletop_40kVAb;
	impedance 0.005+0.05j;
	powerB_rating 40 kVA;
	primary_voltage 7200;
	secondary_voltage 120;
	connect_type SINGLE_PHASE_CENTER_TAPPED;
	install_type POLETOP;
};

object transformer_configuration {
	name Poletop_40kVAc;
	impedance 0.005+0.05j;
	powerC_rating 40 kVA;
	primary_voltage 7200;
	secondary_voltage 120;
	connect_type SINGLE_PHASE_CENTER_TAPPED;
	install_type POLETOP;
};

object node {
	name SupplyBus;
	phases "ABCN";
	nominal_voltage 37500;
	voltage_A 37500+0d;
	voltage_B 37500-120d;
	voltage_C 37500+120d;
};

object transformer {
    name Feeder;
    configuration Feeder_2000kVA;
    from SupplyBus;
    to MainBus;
    phases ABCN;
	object recorder {
		file "feeder.csv";
		property "power_out";
		interval 3600;
	};
};

object node {
	name MainBus;
	phases ABCN;
	object recorder {
		file "mainbus.csv";
		property "voltage_A,voltage_B,voltage_C";
		interval 3600;
	};
};

object transformer:..10 {
	from MainBus;
	configuration Poletop_40kVAa;
	phases AS;
	to object triplex_meter {
		phases AS;
		object house {
			object evcharger {
				demand_profile "evcharger_demand_profile.csv";
				charger_type MEDIUM;
				vehicle_type ELECTRIC;
				capacity 50;
				charge_at_work FALSE;
			};
		};
	};
};

object transformer:..10 {
	from MainBus;
	configuration Poletop_40kVAb;
	phases BS;
	to object triplex_meter {
		phases BS;
		object house {
			object evcharger {
				demand_profile "evcharger_demand_profile.csv";
				charger_type MEDIUM;
				vehicle_type HYBRID;
				capacity 50;
				charge_at_work FALSE;
			};
		};
	};
};

object transformer:..10 {
	from MainBus;
	configuration Poletop_40kVAc;
	phases CS;
	to object triplex_meter {
		phases CS;
		object house {
			object evcharger {
				demand_profile "evcharger_demand_profile.csv";
				charger_type MEDIUM;
				vehicle_type HYBRID;
				capacity 50;
				charge_at_work TRUE;
			};
		};
	};
};

object collector{
	name HouseCollector;
	group class=house;
	property sum(total_power.mag),sum(enduse_load.mag),sum(power.mag);
	file house_load.csv;
	interval 3600;
};

object collector{
	name EVC_Collector;
	group class=evcharger;
	property sum(enduse_load.mag);
	file house_charger_load.csv;
	interval 3600;
};

object collector{
	name MeterCollector;
	group class=triplex_meter;
	property sum(measured_power);
	file meter_load.csv;
	interval 3600;
};