
clock {
	starttime '2020-01-01 00:00:00';
	stoptime '2021-01-01 00:00:00';
}

///////////////////////////////////////
// network model
///////////////////////////////////////

module powerflow
{
	stop_on_pole_failure TRUE;
}
object node
{
    name node1;
    phases ABC;
    nominal_voltage 12470;
}
object node {
    name node2;
    phases ABC;
    nominal_voltage 12470;
}
object overhead_line_conductor {
	name conductor1;
	diameter 0.5 in;
}
object line_spacing {
	name spacing1;
	distance_AE 30;
	distance_BE 35;
	distance_CE 40;
}
object line_configuration {
	name linetype1;
	spacing spacing1;
	conductor_A conductor1;
	conductor_B conductor1;
	conductor_C conductor1;
}
object overhead_line {
    name oh_node1_node2;
	phases ABC;
	from node1;
	to node2;
	length 500 ft;
	configuration linetype1;
}

///////////////////////////////////////
// weather model
///////////////////////////////////////

module climate;
#weather get CA-Chino_Airport.tmy3
object climate {
	name weather;
	tmyfile "CA-Chino_Airport.tmy3";
}

///////////////////////////////////////
// pole model
///////////////////////////////////////

object pole_configuration {
	name "WOOD-C-45/5";
	pole_type WOOD;
	pole_length 45 ft;
	pole_depth 4.5 ft;
	ground_diameter (32.5/3.14);
	top_diameter (19/3.14);
	fiber_strength 8000 psi;
	repair_time 1 h;
	degradation_rate 0.2;
}

object pole {
    name pole1;
    weather weather;
    configuration "WOOD-C-45/5";
    tilt_degree 20 deg;
    tilt_direction 180;
    install_year 1990;
    object pole_mount
    {
        equipment oh_node1_node2;
    };
};

object pole {
	name pole2;
	weather weather;
	configuration "WOOD-C-45/5";
	tilt_degree 8 deg;
	tilt_direction 270;
	install_year 2000;
    object pole_mount
    {
        equipment oh_node1_node2;
    };
}

///////////////////////////////////////
// recorder model
///////////////////////////////////////

module tape;
object multi_recorder {
	interval 3600;
	property "weather:wind_speed,pole1:pole_stress,pole1:susceptibility, pole1:total_moment, pole1:resisting_moment, pole2:pole_stress,pole2:susceptibility, pole1:critical_wind_speed, pole2:critical_wind_speed, pole2:total_moment, pole2:resisting_moment";
	file test_pole.csv;
}
