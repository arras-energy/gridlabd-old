#set suppress_repeat_messages=FALSE
#set verbose=TRUE
#set output_message_context=NONE

clock {
    timezone "PST+8PDT";
	starttime '2020-01-01 00:00:00';
	stoptime '2021-01-01 00:00:00';
}

///////////////////////////////////////
// weather model
///////////////////////////////////////

module climate;

#weather get CA-Chino_Airport.tmy3
object climate {
	name weather;
	tmyfile "CA-Chino_Airport.tmy3";
}

///////////////////////////////////////
// pole model
///////////////////////////////////////

module powerflow
{
	message_flags VERBOSE;
}

object overhead_line_conductor
{
	name conductor;
	geometric_mean_radius 0.031300;
	diameter 0.927 in;
	resistance 0.185900;
}

object line_spacing
{
	name spacing;
	distance_AB 2.5;
	distance_AC 4.5;
	distance_BC 7.0;
	distance_BN 5.656854;
	distance_AN 4.272002;
	distance_CN 5.0;
	distance_AE 28.0;
	distance_BE 28.0;
	distance_CE 28.0;
	distance_NE 24.0;
}

object line_configuration
{
	name configuration;
	conductor_A conductor;
	conductor_B conductor;
	conductor_C conductor;
	conductor_N conductor;
	spacing spacing;
}

object overhead_line
{
     phases "ABCN";
     name line_1_2;
     from node1;
     to node2;
     length 500;
     configuration configuration;
}

object node
{
     name node1;
     bustype SWING;
     phases "ABCN";
     nominal_voltage 2400;
}

object node
{
     name node2;
     bustype PQ;
     phases "ABCN";
     nominal_voltage 2400;
}

///////////////////////////////////////
// pole model
///////////////////////////////////////

class equipment
{
    enumeration {FAILED=0, OK=1} status;
}

object equipment
{
    name device1;
    status OK;
}

object pole_configuration {
	name "WOOD-C-45/5";
	pole_type WOOD;
	pole_length 45 ft;
	pole_depth 4.5 ft;
	ground_diameter (32.5/3.14);
	top_diameter (19/3.14);
	fiber_strength 8000 psi;
	repair_time 1 h;
}

object pole {
    name pole1;
    weather weather;
    configuration "WOOD-C-45/5";
    tilt_angle 5 deg;
    tilt_direction 270;
    install_year 1990;
    object pole_mount {
    	name device1_mount_pole1;
        equipment device1;
        weight 250 lb;
        area 4 sf;
        height 35 ft;
	    flags NONE;
    };
    object pole_mount
    {
    	name line_1_2_mount_pole1;
        equipment line_1_2;
        pole_spacing 300 ft;
	    flags VERBOSE;
    };
    flags NONE;
};

object pole {
	name pole2;
	weather weather;
	configuration "WOOD-C-45/5";
	tilt_angle 8 deg;
	tilt_direction 180;
	install_year 2000;
    object pole_mount
    {
    	name device2_mount_pole2;
        equipment device2;
        weight 250 lb;
        area 4 sf;
        height 35 ft;
	    flags NONE;
    };
    object pole_mount
    {
    	name line_1_2_mount_pole2;
        equipment line_1_2;
        pole_spacing 300 ft;
	    flags NONE;
    };
    flags NONE;
}

object equipment
{
    name device2;
    status OK;
}

///////////////////////////////////////
// recorder model
///////////////////////////////////////

module tape
{
    csv_header_type NAME;
}
object multi_recorder {
	interval 3600;
	property "weather:wind_speed, weather:wind_dir";
#for POLE in ${FIND class=pole}
    property "${POLE}:tilt_angle, ${POLE}:tilt_direction";
    property "${POLE}:pole_stress, ${POLE}:total_moment, ${POLE}:resisting_moment";
    property "${POLE}:susceptibility, ${POLE}:status";
    property "${POLE/pole/device}:status";
#done
	file test_pole.csv;
}

